@model IEnumerable<StoreAPI.Models.Customer>

@{
    ViewBag.Title = "View";
}

<h2>Пользователи</h2>

<p>@Html.ActionLink("Добавить админа", "Register")</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.role.name)
        </th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.login)
        </th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.adress_customer)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.role.name)
    </td>
    <td></td>
    <td>
        @Html.DisplayFor(modelItem => item.login)
    </td>
    <td></td>
    <td>
        @Html.DisplayFor(modelItem => item.phone)
    </td>
    <td></td>
    <td>
        @Html.DisplayFor(modelItem => item.adress_customer)
    </td>
</tr>
}

</table>
