@model StoreAPI.Models.Category

@{
    ViewBag.Title = "Delete";
}

<h2>Вы хотите удалить категорию?</h2>
<div>

    <p><span class="text_bold">@Html.DisplayNameFor(model => model.name_category)</span> : @Html.DisplayFor(model => model.name_category)</p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("К списку категорий", "Index")
        </div>
    }
</div>
