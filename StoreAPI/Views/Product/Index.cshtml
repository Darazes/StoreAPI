@model IEnumerable<StoreAPI.Models.Product>

<h2>Товары</h2>

<table class="table">
    <tr>
        <td>@Html.ActionLink("Поиск по товарам", "Search")</td>
        <td>@Html.ActionLink("Поиск по категориям", "SearchCategory")</td>
        <td>@Html.ActionLink("Добавить товар", "Create")</td>
    </tr>
</table>

<table class="table">
    <tr>
        <th></th>
        <th>
            Название продукта
        </th>
        <th>
            Категория
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src=@Url.Content("~/Files/" + item.name_product + ".png") />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name_product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category.name_category)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.id_product }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.id_product }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.id_product })
            </td>
        </tr>
    }

</table>
