            @Html.ValidationMessageFor(model => model.name_product, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cost_product, htmlAttributes: new { @class = "control-label col-md-2" })
