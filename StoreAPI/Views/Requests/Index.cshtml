@model IEnumerable<StoreAPI.Models.Request>

@{
    ViewBag.Title = "Заказы";
}

<h2>Заказы</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_request)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_request)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.id_request)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.date_request)
    </td>
    <td>
        @if (item.status == 1)
        {
            <p>В обработке</p>;
        }
        else if (item.status == 2)
        {
            <p>Доставляется</p>
        }
        else 
        {
            <p>Завершён</p>
        }
    </td>
    <td>
        
    </td>
    <td>

        @if (item.status == 1)
        {
            @Html.ActionLink("О заказе |", "Details", new { id = item.id_request })
            @Html.ActionLink("Подтвердить заказ", "СonfirmDetails", new { id = item.id_request })
        }
        @if (item.status == 2)
        {
            @Html.ActionLink("О заказе |", "Details", new { id = item.id_request })
            @Html.ActionLink("Подтвердить доставку", "Edit", new { id = item.id_request })
        }
        @if (item.status == 3)
        {
            @Html.ActionLink("О заказе", "Details", new { id = item.id_request })
        }
    </td>
</tr>
}

</table>
