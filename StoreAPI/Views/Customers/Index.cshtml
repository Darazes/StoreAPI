@model IEnumerable<StoreAPI.Models.Customer>

@{
    ViewBag.Title = "View";
}

<h2>Пользователи</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.adress_customer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.adress_customer)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_customer }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_customer }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_customer })
        </td>
    </tr>
}

</table>
